<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/u_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <include layout="@layout/common_title"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/u_2"
            android:layout_below="@id/u_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo">
    </ImageView>

    <RelativeLayout
            android:id="@+id/u_3"
            android:layout_below="@id/u_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/gray_item"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp">

        <ImageView
                android:id="@+id/a1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/tel">
        </ImageView>

        <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/a1"
                android:gravity="left|center_vertical"
                android:text="用户名："
                android:textColor="@color/blank"
                android:textSize="16sp"/>

        <EditText
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt1"
                android:background="@null"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint=""
                android:singleLine="true"
                android:text=""
                android:textColor="@color/blank"
                android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/u_4"
            android:layout_below="@id/u_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_item"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp">

        <ImageView
                android:id="@+id/a2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/password">
        </ImageView>

        <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/a2"
                android:text="密　码："
                android:textColor="@color/blank"
                android:textSize="16sp"/>

        <EditText
                android:id="@+id/user_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/txt1"
                android:background="@null"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint=""
                android:inputType="textPassword"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/blank"
                android:textSize="16sp"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/lay_male_ornot"
            android:layout_below="@id/u_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:visibility="visible"
            android:orientation="vertical"
            >

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/user_login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_btn_gold"
                    android:paddingBottom="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="10dp"
                    android:text="登　录"
                    android:textColor="@color/white"
                    android:textSize="18sp">
            </Button>
        </RelativeLayout>

    </LinearLayout>
    <Button
            android:id="@+id/man_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男游客"
            android:textSize="18sp"
            android:textColor="@color/gold_p"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            />
    <Button
            android:id="@+id/woman_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女游客"
            android:textSize="18sp"
            android:textColor="@color/gold_p"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"

            />

</RelativeLayout>